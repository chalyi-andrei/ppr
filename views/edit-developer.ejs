<% include partials/header.ejs %>
<div class="container">
  <div class="form_wrap">
    <% if (message) { %>
    <p class="text-center text-danger">
      <%= message %>
    </p>
    <% } %>

    <% if (developer) { %>
    <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="first-name">Name</label>
          <input type="text" class="form-control" name="name" id="name" value="<%= developer.name %>" required>
        </div>
        <div class="form-group col-md-4">
          <label for="last-name">Surname</label>
          <input type="text" class="form-control" name="surname" id="last-name" value="<%= developer.surname %>"
            required disabled title="Surname cannot be edited.">
        </div>
        <div class="form-group col-md-4">
          <label for="username">Position</label>
          <input type="text" class="form-control" name="position" id="username" value="<%= developer.position %>"
            required>
        </div>
      </div>
      <button type="submit" class="btn btn-success float-right">Update Developer</button>
    </form>
    <% } else { %>
    <p class="text-center">Player Not Found. Go <a href="/add">here</a> to add developers.</p>
    <% } %>
  </div>

</div>
</div>
</body>

</html>