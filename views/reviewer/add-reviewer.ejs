<% include ./../partials/header.ejs %>
<div class="container">
  <div class="form_wrap">
    <% if (message != '') { %>
    <p class="text-center text-danger">
      <%= message %>
    </p>
    <% } %>
    <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="first-name">Name</label>
          <input type="text" class="form-control" name="name" id="name" placeholder="Alexandr" required>
        </div>
        <div class="form-group col-md-4">
          <label for="first-name">Surname</label>
          <input type="text" class="form-control" name="surname" id="surname" placeholder="Ivanov" required>
        </div>
        <div class="form-group col-md-4">
          <label for="first-name">Position</label>
          <input type="text" class="form-control" name="position" id="position" placeholder="Senior Software Developer"
            required>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-6">
          <label for="developer">Developer</label>
          <select id="developer" name="developer_id" class="form-control" required>
            <% developers.forEach((developer, index) => { %>
            <option value="<%= developer.id %>">
              <%= developer.name %>
              <%= developer.surname %>
              (
              <%= developer.position %>)
            </option>
            <% }) %>
          </select>
        </div>
      </div>
      <button type="submit" class="btn btn-info float-right">Add Reviewer</button>
    </form>
  </div>

</div>
</div>
</body>

</html>